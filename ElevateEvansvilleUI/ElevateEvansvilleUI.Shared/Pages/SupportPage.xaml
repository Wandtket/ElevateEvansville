                                            Background="#FFC439" Foreground="Black" FontWeight="Bold" CornerRadius="15" Padding="20,5,20,5"
                                            FontSize="18" Margin="5,5,0,0"/>
                                    <Button Content="Share" Click="Share_Click" Tag="Facebook" 
                                            Background="Green" Foreground="White" FontWeight="Medium" CornerRadius="15" Padding="20,5,20,5"
                                            FontSize="18" Margin="5,5,0,0"/>
                                    <TextBox x:Name="MetaTotal" IsEnabled="False" Text="Total: $0.00" BorderBrush="White" BorderThickness="3" FontSize="18" Margin="5,5,0,0"/>
                                </controls:WrapPanel>


                                <Grid Grid.Column="1" Grid.RowSpan="4" Height="260" >
