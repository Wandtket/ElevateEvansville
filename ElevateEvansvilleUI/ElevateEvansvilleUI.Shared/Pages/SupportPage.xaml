<Page
    x:Class="ElevateEvansvilleUI.Pages.SupportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElevateEvansvilleUI.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:toolkit="using:Uno.UI.Toolkit"
    mc:Ignorable="d"
    d:DesignHeight="2000"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Page.Resources>

        <ContentDialog x:Name="Disclaimer" CloseButtonText="Acknowledge">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <TextBlock FontSize="30" Grid.Row="0">
                        <Bold>NO BLIND DONATIONS</Bold>
                </TextBlock>

                <TextBlock FontSize="20" Margin="25,15,0,20" Grid.Row="1">
                        Faith in our institutions is at an all-time low.
                </TextBlock>

                <TextBlock FontSize="20" Margin="25,0,0,0" Grid.Row="2">
                        Instead of asking you to blindly donate money,
                </TextBlock>

                <TextBlock FontSize="20" Margin="25,0,0,20" Grid.Row="3">
                        I would like for you to...
                </TextBlock>

                <TextBlock FontSize="20" Margin="25,0,0,0" Grid.Row="4">
                        <Underline><Bold>Choose your own support method.</Bold></Underline>
                </TextBlock>
            </Grid>
        </ContentDialog>

        <ContentDialog x:Name="PromoteDialog" PrimaryButtonText="Proceed to Paypal"
                       CloseButtonText="Cancel" PrimaryButtonClick="Paypal_Click"
                       IsPrimaryButtonEnabled="False">
            
            <ContentDialog.Title>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Spacing="15">
                    <Image x:Name="PromoteLogo" Source="/Assets/Images/Logos/Facebook.png" Height="50" Width="50"/>
                    <TextBlock x:Name="PromoteTitle" Text="Amount: " Width="185" FontSize="26" VerticalAlignment="Center" FontWeight="Bold" TextWrapping="Wrap"/>
                </StackPanel>
            </ContentDialog.Title>

            <Grid Width="275" RowSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                    A paypal account is not required to make a contribution, choose the "Pay with Debit or Credit Card" option.
                </TextBlock>

                <StackPanel Orientation="Horizontal" Height="35" Spacing="5" HorizontalAlignment="Center" Grid.Row="1">
                    <TextBlock Text="$" VerticalAlignment="Top" Margin="0,7,0,0"/>

                    <ComboBox x:Name="PromoteAmount" PlaceholderText="Select an amount" Width="200" FontSize="18" SelectionChanged="PromoteAmount_SelectionChanged">
                        <x:String>1.00</x:String>
                        <x:String>2.00</x:String>
                        <x:String>5.00</x:String>
                        <x:String>10.00</x:String>
                        <x:String>15.00</x:String>
                        <x:String>20.00</x:String>
                        <x:String>25.00</x:String>
                    </ComboBox>
                </StackPanel>
            </Grid>


        </ContentDialog>
    </Page.Resources>


    <Grid>
        <ScrollViewer Grid.Row="0" HorizontalAlignment="Stretch">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>

                <controls:WrapPanel HorizontalAlignment="Center" Margin="0,50,0,0" >

                    <controls:Expander x:Name="Calendar" 
                               MaxWidth="555" Margin="25,25,25,0"
                               IsExpanded="True" VerticalAlignment="Top"
                               Visibility="Collapsed">
                        <controls:Expander.Header>
                            <Grid ColumnSpacing="15" IsHitTestVisible="False" Background="{x:Null}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Image Source="/Assets/Images/Logos/Calendar.png" Height="35" Width="35" Grid.Column="0"/>
                                <TextBlock FontSize="20" VerticalAlignment="Center" Grid.Column="1">
                                            <Bold>Add to Calendar</Bold>
                                </TextBlock>

                            </Grid>
                        </controls:Expander.Header>
                        <controls:Expander.Content >
                            <Grid MinHeight="280" Padding="15,0,15,0" RowSpacing="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" FontSize="16" >
                                        The most important step is obviously to vote.
                                </TextBlock>

                                <TextBlock Grid.Row="1"  FontSize="16" >
                                        Politics isn't something the general public should need to focus on every
                                        waking moment of their lives, it's supposed to be either boring or exciting.
                                        Not something that causes existential dread and animosity toward your neighbors.
                                </TextBlock>

                                <TextBlock Grid.Row="2" FontSize="16">
                                        Add the election times to your calendar and I'll remind you when the voting booths are open.
                                </TextBlock>

                                <StackPanel Orientation="Horizontal" Spacing="5" Grid.Row="4" Margin="0,25,0,0">
                                    <Button Content="Add to Calendar" Click="Calendar_Click" Tag="Distribute" 
                                            Background="Green" Foreground="White" FontWeight="Medium" CornerRadius="15" Padding="20,5,20,5"
                                            FontSize="18">
                                        <Button.Flyout>
                                            <MenuFlyout Placement="Top">
                                                <MenuFlyoutItem x:Name="CalendarGoogle" Text="Google" Click="Calendar_Click"/>
                                                <MenuFlyoutItem x:Name="CalendarYahoo" Text="Yahoo" Click="Calendar_Click"/>
                                                <MenuFlyoutItem x:Name="CalendarOutlook" Text="Outlook" Click="Calendar_Click"/>
                                                <!--<MenuFlyoutItem x:Name="CalendarICS" Text="ICS" Click="Calendar_Click"/>-->
                                            </MenuFlyout>
                                        </Button.Flyout>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </controls:Expander.Content>
                    </controls:Expander>

                    <controls:Expander x:Name="DistributeAll" 
                               MaxWidth="555" Margin="25,25,25,0" 
                               IsExpanded="True" VerticalAlignment="Top">
                        <controls:Expander.Header>
                            <Grid ColumnSpacing="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Image Source="/Assets/Images/Logos/Logo.png" Height="35" Width="35" Grid.Column="0"/>
                                <TextBlock FontSize="20" VerticalAlignment="Center" Grid.Column="1">
                                            <Bold>All Platforms</Bold>
                                </TextBlock>

                            </Grid>
                        </controls:Expander.Header>
                        <controls:Expander.Content >
                            <Grid MinHeight="280" Padding="15,0,15,15" RowSpacing="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" FontSize="16" Margin="0,10,15,0">
                                    Can't decide what to contribute to?
                                </TextBlock>

                                <TextBlock Grid.Row="1"  FontSize="16" >
                                    Choose a dollar amount and distribute to all platforms evenly. Your money will not be used beyond the scope of these platforms.
                                    New platforms may be added in the future so be sure to keep checking this page.
                                </TextBlock>

                                <TextBlock Grid.Row="2" FontSize="16">

                                </TextBlock>

                                <controls:WrapPanel Grid.Row="3" Margin="0,45,0,0">
                                    <Button Content="Distribute All" Click="Promote_Click" 
                                            Tag="Elevate Evansville - Distribute All" 
                                            Background="#FFC439" Foreground="Black" FontWeight="Bold" CornerRadius="15" Padding="20,5,20,5"
                                            FontSize="18" Margin="5,5,0,0"/>
                                    <TextBox x:Name="AllPlatformsTotal" IsEnabled="False" Text="Grand Total: $0.00" BorderBrush="White" BorderThickness="3" FontSize="18" Margin="5,5,0,0"/>
                                </controls:WrapPanel>
                            </Grid>
                        </controls:Expander.Content>
                    </controls:Expander>

