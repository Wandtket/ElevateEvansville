                                            <RotateTransform Angle="270"/>
                                        </ProgressBar.RenderTransform>

                                    </ProgressBar>

                                    <TextBlock Text="$72.00" VerticalAlignment="Top" HorizontalAlignment="Center"  FontWeight="Bold" Margin="0,15,0,0"/>

                                    <TextBlock Text="$0.00" Margin="0,0,0,5" VerticalAlignment="Bottom" HorizontalAlignment="Center"  FontWeight="Bold"/>
                                </Grid>

                            </Grid>
                        </controls:Expander.Content>
                    </controls:Expander>

