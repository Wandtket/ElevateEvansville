                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Image Source="/Assets/Images/Logos/BillboardsIn.png" Height="35" Width="35" Grid.Column="0"/>
                                <TextBlock FontSize="20" VerticalAlignment="Center" Grid.Column="1">
                                            <Bold>Billboards</Bold>
                                </TextBlock>

                            </Grid>
                        </controls:Expander.Header>
                        <controls:Expander.Content >
                            <Grid MinHeight="280" Padding="15,0,15,0" RowSpacing="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" FontSize="16" Margin="0,10,15,0">
                                Contributing to the billboard budget will allow me to strategically place physical ads around town to have a wider reach than just social media.
                                </TextBlock>

                                <TextBlock Grid.Row="1"  FontSize="16" >
                                There is no threshold for billboard advertising due to various price fluctuations, Instead the meter will just report the total contribution.
                                </TextBlock>

                                <TextBlock Grid.Row="2" FontSize="16">

                                </TextBlock>

                                <controls:WrapPanel Grid.Row="3" Margin="0,45,0,0">
                                    <Button Content="Contribute" Click="Promote_Click" 
                                            Tag="Elevate Evansville - Billboards" 
                                            Background="#FFC439" Foreground="Black" FontWeight="Bold" CornerRadius="15" Padding="20,5,20,5"
                                            FontSize="18" Margin="5,5,0,0"/>
                                    <TextBox x:Name="BillboardsTotal" IsEnabled="False" Text="Grand Total: $0.00" BorderBrush="White" BorderThickness="3" FontSize="18" Margin="5,5,0,0"/>
                                </controls:WrapPanel>
                            </Grid>
                        </controls:Expander.Content>
                    </controls:Expander>


