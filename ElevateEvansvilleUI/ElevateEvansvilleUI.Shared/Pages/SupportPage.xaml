                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Margin="0,15,15,0" FontSize="16">
                                        The most popular social media site in Evansville, IN is Facebook.
                                </TextBlock>

                                <TextBlock Grid.Row="1"  Margin="0,0,15,0" FontSize="16">
                                        To promote this campaign on Meta Adsense, specify a dollar amount you wish to provide, you'll then be redirected to a paypal request screen,
                                </TextBlock>

                                <TextBlock Grid.Row="2" Margin="0,0,15,0" FontSize="16">
                                        Once the threshold has been reached the server will load it into Facebook and the ads will be published.
                                </TextBlock>

                                <controls:WrapPanel Grid.Row="3" Margin="0,0,15,0">
